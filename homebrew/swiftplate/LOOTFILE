name='swiftplate'
url=('https://github.com/JohnSundell/SwiftPlate/archive/1.4.0.tar.gz')
description='Cross-platform Swift framework templates from the command-line'
version='1.4.0' # Guessed version.
priority='optional'
homepage='https://github.com/JohnSundell/SwiftPlate'
depends=(':xcode')

###### Install ######
# xcodebuild "-project",
# "SwiftPlate.xcodeproj",
# "-scheme", "SwiftPlate",
# "-configuration", "Release",
# "CONFIGURATION_BUILD_DIR=build",
# "SYMROOT=."
# bin.install "build/swiftplate"

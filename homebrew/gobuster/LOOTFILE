makedepends=('go')

###### Install ######
# ENV["GOPATH"] = buildpath
# (buildpath/"src/github.com/OJ").mkpath
# ln_sf buildpath, buildpath/"src/github.com/OJ/gobuster"
# Language::Go.stage_deps resources, buildpath/"src"
# system "go", "build", "-o", bin/"gobuster"

makedepends=('go')

###### Install ######
# ENV["GOPATH"] = buildpath
# (buildpath/"src/github.com/google").mkpath
# ln_s buildpath, buildpath/"src/github.com/google/git-appraise"
# system "go", "build", "-o", bin/"git-appraise", "github.com/google/git-appraise/git-appraise"

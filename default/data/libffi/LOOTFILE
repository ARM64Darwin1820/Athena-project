name='libffi'
version='3.2.1'
description='Portable Foreign Function Interface library'
section='Development'
url="https://sourceware.org/pub/libffi/libffi-${version}.tar.gz"
priority='optional'
homepage='https://sourceware.org/libffi/'
tags='purpose::library'

build(){
	pkg:configure
	make
}

package(){
	make DESTDIR=$pkgdir install
}
